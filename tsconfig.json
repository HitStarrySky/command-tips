{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "./dist",
    "baseUrl": "./package",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["package", "typings"],
  "exclude": ["node_modules"]
}
